<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9eb"
    tools:context=".BlankFragment_manga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_namga_title"
            android:layout_width="394dp"
            android:layout_height="272dp"
            android:layout_gravity="center"
            android:background="@drawable/ll"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/lamp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Название"
            android:textSize="15dp"
            android:textColor="#FFC98B" />

        <TextView
            android:id="@+id/name_manga_blF"
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="TextView"
            android:textColor="#FF007A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:dropDownSelector="@color/ff007a"
            android:entries="@array/my_string_array"
            android:theme="@style/AppTheme"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/button_buy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-45dp"
            android:backgroundTint="#ffdccc"
            android:text="Читать"
            android:textColor="#f5918f"
            android:layout_gravity="start" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Жанры"
            android:textSize="15dp"
            android:textColor="#FFC98B"/>

        <TextView
            android:id="@+id/desk_manga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#FF007A"/>

        <TextView
            android:id="@+id/name_opManga"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="TextView"
            android:textColor="#7AA97D"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_reed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#fff9eb"
            android:textColor="#f5918f"
            android:visibility="gone"
            android:text="Читать описание дальше"
            android:textSize="5dp"/>
        <Button
            android:id="@+id/button_Notreed"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:backgroundTint="#fff9eb"
            android:textColor="#f5918f"
            android:visibility="gone"
            android:text="Свернуть описание "
            android:textSize="5dp"/>

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="360dp"
            android:layout_height="150dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-65dp"
            app:srcCompat="@drawable/lllll" />

    </LinearLayout>
</ScrollView>

