<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9eb"
    android:orientation="vertical"
    tools:context=".BlankFragment4">


    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:srcCompat="@drawable/zzzzzzzzz"
        android:layout_marginLeft="255dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_gravity="center"
        android:layout_marginTop="-380dp"
        app:srcCompat="@drawable/lamp" />

    <TextView
        android:id="@+id/namePolz"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="m"
        android:textColor="#ffb284"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Описание"
        android:textColor="#ffb284"
        android:textSize="15sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="#ffdccc"
        android:gravity="center"
        android:text="Редактировать"
        android:textColor="#f5918f"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_marginLeft="-120dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/gyikutg" />


</LinearLayout>