<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff9eb"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/table1" />

    <Button
        android:id="@+id/btn_popul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffdccc"
        android:textColor="#f5918f"
        android:text="Популярное"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        />

    <Button
        android:id="@+id/btn_collection"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:text="Коллекции"
        android:backgroundTint="#ffdccc"
        android:textColor="#f5918f"
        android:layout_marginLeft="50dp"
        />


    <Button
        android:id="@+id/btn_rand"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:text="Рандом"
        android:backgroundTint="#ffdccc"
        android:textColor="#f5918f"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="-100dp"
        />

    <Button
        android:id="@+id/btn_filtr"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Фильтр"
        android:backgroundTint="#ffdccc"
        android:textColor="#f5918f"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="215dp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="65dp"
        android:text="Рекомендации"
        android:textColor="#79a970"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:srcCompat="@drawable/perev"
        android:layout_marginRight="-260dp"
        android:layout_marginTop="50dp"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnavL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffb284"
        android:rotationX="0"
        android:rotationY="0"
        app:itemIconTint="@color/fff9eb"
        app:itemTextColor="@color/fff9eb"
        app:menu="@menu/b1"/>

</LinearLayout>